<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    tools:context=".ScorePerGameActivity">

    <ImageView
        android:layout_width="411dp"
        android:layout_height="660dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/other"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Best Players For Each Game:"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SlidingTilesButton"
        android:layout_width="125dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/slidingtiles"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TileText" />

    <Button
        android:id="@+id/SudokuButton"
        android:layout_width="125dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/sudoku"
        app:layout_constraintEnd_toEndOf="@+id/SlidingTilesButton"
        app:layout_constraintStart_toStartOf="@+id/SlidingTilesButton"
        app:layout_constraintTop_toBottomOf="@+id/SlidingTilesButton" />

    <Button
        android:id="@+id/HanoiButton"
        android:layout_width="125dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/hanoibutton"
        app:layout_constraintEnd_toEndOf="@+id/SudokuButton"
        app:layout_constraintStart_toStartOf="@+id/SudokuButton"
        app:layout_constraintTop_toBottomOf="@+id/SudokuButton" />
</android.support.constraint.ConstraintLayout>
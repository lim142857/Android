<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    tools:context=".ChooseGameActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:layout_width="411dp"
        android:layout_height="660dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/other"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/WelcomeUser"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/SlidingTilesButton"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/slidingtiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeUser" />

    <Button
        android:id="@+id/ScoreButton"
        android:layout_width="129dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rank"
        app:layout_constraintBottom_toBottomOf="@+id/SignOutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SignOutButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/SignOutButton"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/signout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/SudokuButton"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/sudoku"
        app:layout_constraintEnd_toEndOf="@+id/SlidingTilesButton"
        app:layout_constraintStart_toStartOf="@+id/SlidingTilesButton"
        app:layout_constraintTop_toBottomOf="@+id/SlidingTilesButton" />

    <Button
        android:id="@+id/HanoiButton"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/hanoibutton"
        app:layout_constraintEnd_toEndOf="@+id/SudokuButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/SudokuButton"
        app:layout_constraintTop_toBottomOf="@+id/SudokuButton" />


</android.support.constraint.ConstraintLayout>